@model DB2WebProject.Models.SignupViewModel;
@{
	Layout = null;
	ViewData["Title"] = "Регистрация";
}

<!DOCTYPE html>
<html>
<head>
	<title>@ViewData["Title"]</title>
	<style>
		.field-validation-error
		{
			color: red;
		}
		input.input-validation-error
		{
			border-width: 1px;
			border-color: red;
		}
		input.valid
		{
			border-width: 1px;
			border-color:mediumseagreen;
		}
	</style>
</head>
<body>
<h1>Вход в личный кабинет</h1>
<p/>
<form action="SignupSubmit" method="post">
	<div asp-validation-summary="All"></div>
	<p>
		<label asp-for="@Model.user.username"></label><br />
		<input type="text" asp-for="@Model.user.username" />
		<span asp-validation-for="@Model.user.username" />
	</p>

	@if (Model.signupMode)
	{
		<p>
			<label asp-for="@Model.user.email"></label><br />
			<input type="text" asp-for="@Model.user.email" />
			<span asp-validation-for="@Model.user.email" />
		</p>
	}

	<p>
		<label asp-for="@Model.user.password"></label><br />
		<input type="text" asp-for="@Model.user.password" />
		<span asp-validation-for="@Model.user.password" />
	</p>

	@if (Model.signupMode)
	{
		<p>
			<label asp-for="@Model.user.passwordCheck"></label><br />
			<input type="text" asp-for="@Model.user.passwordCheck" />
			<span asp-validation-for="@Model.user.passwordCheck" />
		</p>
	}

	@if (Model.signupMode)
	{
		<input type="submit" value="Зарегистрироваться">
	}
	else
	{
		<input type="submit" value="Войти">
	}
</form>

@if (!Model.signupMode)
{
	<form action="SignupNoAccount" method="post">
		<input type="submit" value="У меня нет аккаунта" />
	</form>
}

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>